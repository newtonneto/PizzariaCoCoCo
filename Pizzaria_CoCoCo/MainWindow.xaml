            <Button x:Name="buttonAtualizarPizza" Content="Atualizar" HorizontalAlignment="Left" Margin="751,695,0,0" VerticalAlignment="Top" Width="75" Click="ButtonAtualizarPizza_Click"/>
            <Button x:Name="buttonDesativarPizza" Content="Desativar" HorizontalAlignment="Left" Margin="831,695,0,0" VerticalAlignment="Top" Width="75" Click="ButtonDesativarPizza_Click"/>
